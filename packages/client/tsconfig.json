{
    "compilerOptions": {
        "jsx": "react",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./lib",
        "module": "commonjs",
        "resolveJsonModule": true,
        "noEmit": true,
        "target": "esnext",
        "lib": ["dom", "esnext"],
    },
    "include": ["src"]
}